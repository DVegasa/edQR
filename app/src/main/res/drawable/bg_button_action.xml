<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_enabled="false">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/action_corner_radius"/>
            <solid android:color="@color/colorActionBackgroundsDisabled" />
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/action_corner_radius"/>
            <solid android:color="@color/colorActionBackgroundsPressed" />
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/action_corner_radius"/>
            <solid android:color="@color/colorActionBackgrounds" />
        </shape>
    </item>

</selector>